generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

enum Role {
  CUSTOMER
  AGENT
  ADMIN
}

enum TicketStatus {
  OPEN
  IN_PROGRESS
  WAITING_CUSTOMER
  RESOLVED
  CLOSED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

model User {
  id             String    @id @default(cuid())
  email          String    @unique
  name           String?
  password       String?
  role           Role      @default(CUSTOMER)
  avatar         String?
  stripeCustomerId String?
  subscriptionId String?
  subscriptionStatus String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // Relations
  createdTickets  Ticket[]        @relation("TicketCreator")
  assignedTickets Ticket[]        @relation("TicketAssignee")
  comments        TicketComment[]
  cannedResponses CannedResponse[]

  @@map("users")
}

model Ticket {
  id          String       @id @default(cuid())
  number      Int          @unique @default(autoincrement())
  subject     String
  description String       @db.Text
  status      TicketStatus @default(OPEN)
  priority    Priority     @default(MEDIUM)
  
  // SLA tracking
  slaDeadline DateTime?
  firstResponseAt DateTime?
  resolvedAt  DateTime?
  
  // Relations
  creatorId   String
  creator     User         @relation("TicketCreator", fields: [creatorId], references: [id])
  assigneeId  String?
  assignee    User?        @relation("TicketAssignee", fields: [assigneeId], references: [id])
  
  comments    TicketComment[]
  tags        TicketTag[]
  
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@index([creatorId])
  @@index([assigneeId])
  @@index([status])
  @@index([priority])
  @@map("tickets")
}

model TicketComment {
  id        String   @id @default(cuid())
  content   String   @db.Text
  isInternal Boolean @default(false)
  
  ticketId  String
  ticket    Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([ticketId])
  @@map("ticket_comments")
}

model TicketTag {
  id       String   @id @default(cuid())
  name     String
  color    String   @default("#6366f1")
  
  ticketId String
  ticket   Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade)

  @@index([ticketId])
  @@map("ticket_tags")
}

model CannedResponse {
  id        String   @id @default(cuid())
  title     String
  content   String   @db.Text
  shortcut  String?
  category  String?
  
  createdById String
  createdBy   User   @relation(fields: [createdById], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("canned_responses")
}

model SLAPolicy {
  id               String   @id @default(cuid())
  name             String
  description      String?
  
  // Response times in hours
  firstResponseLow      Int @default(24)
  firstResponseMedium   Int @default(8)
  firstResponseHigh     Int @default(4)
  firstResponseCritical Int @default(1)
  
  // Resolution times in hours
  resolutionLow      Int @default(72)
  resolutionMedium   Int @default(48)
  resolutionHigh     Int @default(24)
  resolutionCritical Int @default(4)
  
  isDefault Boolean @default(false)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("sla_policies")
}
